<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:name="com.example.worldcinematv.MainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fg_main"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/film" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/acc_img"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Воланд Иванов"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="80dp"/>

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_sign"
        android:layout_marginStart="50dp"
        android:layout_marginTop="180dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Смотреть"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В тренде"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="250dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#00000000"
        android:layout_marginTop="290dp"
        android:elevation="0dp"/>

</FrameLayout>